{
    "compilerOptions": {
      "module": "CommonJS",
      "target": "ES2016",
      "sourceMap": true,
      "outDir": "./dist",
      "noImplicitAny": true,
      "declaration": true,
      "moduleResolution": "node",
      "esModuleInterop": true,
      "allowJs": true,
      "allowSyntheticDefaultImports": true,
      "strict": false,
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
}
